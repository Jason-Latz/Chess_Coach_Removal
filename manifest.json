{
  "manifest_version": 3,
  "name": "Chess.com Coach Remover",
  "version": "1.0.0",
  "description": "Popup Button Removes Coach Messages on Puzzles page of Chess.com",
  "action": {
    "default_title": "Chess.com Coach Remover",
    "default_popup": "popup.html"
  },
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [{
  "matches": ["https://www.chess.com/*"],
  "js": ["content.js"],
  "run_at": "document_idle"
}]
}
